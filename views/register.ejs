<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>

</head>
<body>
    <div class="col-sm-5 bg-light rounded py-3 offset-sm-1">
        <h2 class="text-center"> Register </h2>
        <form action="/register" method="post" novalidate>
            <div class="form-group">
                <label for="_name"> Name </label>
                <input type="text" name="user_name" id="_rname" class="form-control" value="<%= (locals.old_data) ? old_data.user_name : '' %>" placeholder="Name" required>
            </div>
            <div class="form-group">
                <label for="_email"> Email </label>
                <input type="text" name="user_email" id="_remail" class="form-control" value="<%= (locals.old_data) ? old_data.user_email : '' %>" placeholder="Email" required>
            </div>
            <div class="form-group">
                <label for="_pass"> Password </label>
                <input type="text" name="user_pass" id="_rpass" class="form-control"  placeholder="Password" required>
            </div>
            <% if (locals.register_error){
                register_error.forEach(function(error_msg){ %>
                    <div class="alert alert-danger" role="alert"><%=error_msg%></div>
                <% })
            }%>
            <button type="submit" class="mt-2 btn btn-success"> Sign up </button>
        </form>
    </div>
</body>
</html>